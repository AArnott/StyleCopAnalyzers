{
	"build": {
		"content": [
			{
				"files": [
					"**/*.{md,yml}"
				],
				"exclude": [
					"_site/**"
				]
			}
		],
		"resource": [
			{
				"files": [
					"images/**"
				]
			}
		],
		"xref": [
			"https://learn.microsoft.com/en-us/dotnet/.xrefmap.json"
		],
		"output": "_site",
		"template": [
			"default",
			"modern"
		],
		"globalMetadata": {
			"_appName": "StyleCop.Analyzers",
			"_appTitle": "StyleCop.Analyzers",
			"_enableSearch": true,
			"pdf": false
		}
	}
}
